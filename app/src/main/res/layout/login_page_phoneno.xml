<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@color/black"
    android:id="@+id/login_page"
    tools:context=".LoginOTP">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="274dp"
        android:layout_height="242dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="473dp"
        android:contentDescription="@null"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/potli_logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="109dp"
        android:layout_marginTop="239dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="428dp"
        android:fontFamily="serif"
        android:text="@string/welcome_back_n_star_saver"
        android:textAlignment="center"
        android:paddingBottom="5dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signinword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:text="Sign in to \nSave in Style"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="20sp"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/top_corners_rounded_rect" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        android:textSize="25sp"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/tenDigit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageView2"
        android:padding="10dp"
        android:textSize="14sp"
        android:background="@drawable/rounded_rect_border_high"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textColorHint="@color/black"/>


    <FrameLayout
        android:id="@+id/get_otp_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/tenDigit"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <ImageButton
            android:id="@+id/get_otp_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_button"
            tools:ignore="ContentDescription"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="GET OTP"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"/>

    </FrameLayout>


    <TextView
        android:id="@+id/useEmailInstead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/get_otp_layout"
        android:text="Use Email Instead"
        android:textSize="17sp"
        android:textColor="@color/blue"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="useEmailInsteadClick"/>




</androidx.constraintlayout.widget.ConstraintLayout>