<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:orientation="vertical">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up \nnew account"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:letterSpacing="0.01"
        android:layout_marginStart="16dp"
        android:layout_marginTop="54dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize="20sp"
        android:textColor="#B4b4b4"
        android:textStyle="normal"
        android:letterSpacing="0.01"
        android:layout_marginStart="16dp"
        android:layout_marginTop="71dp"/>

    <EditText
        android:id="@+id/tenDigit"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/input"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint=" 880XX XX088"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:textColorHint="#363636"
        android:inputType="phone"
        android:textColor="#FFFFFF"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/next_onboarding"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/get_otp_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Continue"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"/>


    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or sign up with"
        android:letterSpacing="-0.03"
        android:textColor="#b4b4b4"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="168dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_off"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/google"
                android:padding="4dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Google"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"/>

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have an Account?"
        android:letterSpacing="0"
        android:textColor="#b4b4b4"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:text="Login Now"
        android:textColor="#4c4aef"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>