<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@color/black"
    tools:context=".ContactUsFragment">


    <ImageView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/potli_logo"
        android:layout_width="274dp"
        android:layout_height="242dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:src="@drawable/potli_logo"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/potli_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:textSize="37sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>


    <FrameLayout
        app:layout_constraintBottom_toTopOf="@id/margin"
        android:layout_width="match_parent"
        android:layout_height="420dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f4f6ff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/potli_bar"
            android:textColor="@color/black"/>

    </FrameLayout>

    <View
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/margin"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#33443c"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>