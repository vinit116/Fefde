<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">




    <TextView
        android:id="@+id/Greet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:text="Hi, John Doe"
        android:textColor="@color/white"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/Welcome_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Greet"
        android:layout_marginStart="22dp"
        android:text="Welcome Back"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <FrameLayout
        android:id="@+id/profile_photo_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="340dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_person_24"
            android:background="@drawable/circle_shape"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/MBSTN"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="120dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Balance"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rupee"
                android:layout_marginStart="60dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="100"
                android:textColor="@color/white"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/spent_till_now_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spent Till Now"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rupee"
                android:layout_marginStart="78dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="100"
                android:textColor="@color/white"/>


        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/update_balance_button_layout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/MBSTN"
        android:layout_marginTop="40dp">

        <ImageButton
            android:id="@+id/update_balance_button"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:background="@drawable/update_balance_button_bg"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Balance"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>

    </FrameLayout>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:background="#f4f6ff"
        android:layout_marginTop="115dp"
        android:layout_below="@id/update_balance_button_layout"/>
    <View
        android:id="@+id/margin"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#33443c"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="70dp"
        android:layout_below="@id/update_balance_button_layout">

        <ImageView
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:background="@drawable/potli_bar"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/food_potli_img"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="17dp"
                        android:scaleX="1.3"
                        android:scaleY="1.5"
                        android:background="@drawable/food_potli"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="85dp"/>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/rent_potli_img"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="20dp"
                        android:scaleX="1.8"
                        android:scaleY="2"
                        android:background="@drawable/rent_potli"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="85dp"/>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/travel_potli_img"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="17dp"
                        android:scaleX="2.6"
                        android:scaleY="2.2"
                        android:background="@drawable/travel_potli"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="85dp"/>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/add_potli_img"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="8dp"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:background="@drawable/baseline_add_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="85dp"/>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


</RelativeLayout>