<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        style="@style/BottomNavigationViewStyle"
        app:menu="@menu/bottom_navigation_menu"
        app:labelVisibilityMode="unlabeled"
        app:itemIconSize="45dp"/>


    <TextView
        android:id="@+id/Greet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:text="Hi, John Doe"
        android:textColor="@color/white"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/Welcome_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Greet"
        android:layout_marginStart="22dp"
        android:text="Welcome Back"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <FrameLayout
        android:id="@+id/profile_photo_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/Welcome_back"
        android:layout_marginTop="20dp"
        android:layout_marginStart="200dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_person_24"
            android:background="@drawable/circle_shape"/>

    </FrameLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Balance"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rupee"
                android:layout_marginStart="60dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="100"
                android:textColor="@color/white"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/spent_till_now_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spent Till Now"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rupee"
                android:layout_marginStart="78dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="100"
                android:textColor="@color/white"/>


        </LinearLayout>

    </LinearLayout>



    <FrameLayout
        android:id="@+id/update_bal_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="195dp">

        <ImageView
            android:id="@+id/update_balance_button"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:background="@drawable/update_balance_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Update Balance"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"
            android:textStyle="bold"/>

    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="#f4f6ff"
        android:layout_below="@id/update_bal_button_layout"
        android:layout_marginTop="86dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#33443c"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"/>

